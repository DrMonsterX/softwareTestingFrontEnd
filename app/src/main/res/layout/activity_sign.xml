        <TableRow>

            <ImageButton
                android:id="@+id/imageButton2"
                android:layout_width="1dp"
                android:layout_height="110dp"
                android:background="@drawable/headshot1" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="1dp"
                android:layout_height="110dp"
                android:background="@drawable/headshot3" />
        </TableRow>

        <TableRow>

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="1dp"
                android:layout_height="110dp"
                android:background="@drawable/headshot2" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="1dp"
                android:layout_height="110dp"
                android:background="@drawable/headshot4" />
        </TableRow>
    </TableLayout>

    <RadioGroup
        android:id="@+id/group2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="8dp"
        android:orientation="vertical"
        app:layout_constraintStart_toEndOf="@+id/group1"
        app:layout_constraintTop_toTopOf="@+id/tableLayout2">

        <RadioButton
            android:id="@+id/box3"
            android:layout_width="match_parent"
            android:layout_height="190dp" />

        <RadioButton
            android:id="@+id/box4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

    </RadioGroup>

    <RadioGroup
        android:id="@+id/group1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toStartOf="@+id/tableLayout2"
        app:layout_constraintTop_toTopOf="@+id/tableLayout2">

        <RadioButton
            android:id="@+id/box1"
            android:layout_width="match_parent"
